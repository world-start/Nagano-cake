<h4>ショッピングカート</h4>
<%= button_to 'カートを空にする' %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.order_item.amount %></td>
      <td><%= cart_item.item.subtotal %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>


<table>
    <td>合計金額</td>
  <% @cart_items.each do |cart_item| %>
    <td><%= @sum += cart_item.subtotal %></td>
  <% end %>
</table>