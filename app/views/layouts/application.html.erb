<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/91078cb5ad.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
            <h1>LOGO</h1>
            
                <ul class="navbar-nav ml-auto">
                  <% if admin_signed_in? %>
                    <li><%= link_to "商品一覧", admin_items_path %></li>
                    <li><%= link_to "会員一覧", admin_customers_path %></li>
                    <li><%= link_to "注文履歴一覧", admin_root_path %></li>
                    <li><%= link_to "ジャンル一覧", admin_genres_path %></li>
                    <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
                  <% elsif customer_signed_in? %>
                    <li><%= link_to 'マイページ', customer_path(current_customer.id) %></li>
                    <li><%= link_to "商品一覧", items_path %></li>
                    <li><%= link_to "カート", cart_items_path %></li>
                    <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
                   <% else %>
                    <li><%= link_to "About", homes_about_path %></li>
                    <li><%= link_to "商品一覧", items_path %></li>
                    <li><%= link_to "新規登録", new_customer_registration_path %></li>
                    <li><%= link_to "ログイン", new_customer_session_path %></li>
                  <% end %>
                </ul>
        </div>
      </nav>
      <!--font awesome読み込む-->
      <%= form_tag(root_path,:method => 'get') do %>
        <%= text_field_tag :search %>
        <%= submit_tag '\uF002', :name => nil %>
      <% end %>
      <i class="fas fa-search"></i>
      
      </div>
      
    </header>
    
    <main>
      <%= yield %>
    </main>
  </body>
</html>
