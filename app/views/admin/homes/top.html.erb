<h4>注文履歴一覧</h4>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <!--belongs_toでモデルをつなぐ-->
      <% @orders.each do |order| %>
        <td><%= order.created_at %></td>
        <td><%= order.name %></td>
        <%= @order_items.each do |order_item| %>
          <td><%= order_item.amount%></td>
        <% end %>
        <td><%= order.order_status %></td>
      <% end %>
    </tr>
  </tbody>
</table>